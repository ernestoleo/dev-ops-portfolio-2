---
/**
 * Base layout for all pages.
 * Add metadata, fonts, structured wrapping, theme handling, etc.
 */
const { title = "Portfolio", description = "DevOps Engineer" } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Google Fonts: DM Sans + IBM Plex Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=IBM+Plex+Mono:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Global stylesheet -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="bg-background text-foreground font-sans">
    <slot />
  </body>
</html>